             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JournalTecho.SourceFile.Controls"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!--默认基本自定义控件2-->
    <!--传入-->
    <Border Background="#ffffff" CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border  CornerRadius="10 0 0 0" Margin="10 0 10 0"  BorderThickness="0 0 0 1" BorderBrush="Black">
                <WrapPanel VerticalAlignment="Center">
                    <TextBlock Text="TU "/>
                    <TextBlock Text="内容"/>
                </WrapPanel>
            </Border>
            <Border  Grid.Row="1" CornerRadius="0 0 10 10">
                
            </Border>
        </Grid>
    </Border>
</UserControl>
